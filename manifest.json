{
  "manifest_version": 3,
  "name": "LC2GH â€” LeetCode Grabber (no-backend MVP)",
  "version": "0.0.2",
  "description": "On Accepted, capture code + metadata (title/slug/lang/runtime/memory) and download JSON/MD.",
  "permissions": ["storage", "activeTab", "downloads"],
  "host_permissions": ["https://leetcode.com/*", "https://leetcode.cn/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://leetcode.cn/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected-bridge.js"],
      "matches": ["https://leetcode.com/*", "https://leetcode.cn/*"]
    }
  ]
}
